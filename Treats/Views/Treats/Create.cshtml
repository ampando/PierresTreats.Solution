@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<div class="content">
  <h4>Add A New Treat Choice Here:</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @class="form-control", required="required" })

  <input class="btn btn-dark" type="submit" value="Add New Treat"  />
  <button>@Html.ActionLink("Show All Treats", "Index")</button>
}
</div>