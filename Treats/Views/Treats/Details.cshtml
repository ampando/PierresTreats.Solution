@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<h2>Treat Options</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinFlavors.Count == 0)
{
  <p>This treat has not been assigned a flavor yet.</p>
}
else
{
  <h4>Flavors available for this treat:</h4>
  <ul>
  @foreach(var join in Model.JoinFlavors)
  {
    <li>@join.Flavor.Name</li>
  }
  </ul>
}

<div class="btn-group" role="group">
<button>@Html.ActionLink("Back to Flavor Options", "Index")</button>
<button>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId })</button>
<button>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</button>
<button>@Html.ActionLink("Add a Flavor", "AddFlavor", new { id = Model.TreatId })</button>
</div>