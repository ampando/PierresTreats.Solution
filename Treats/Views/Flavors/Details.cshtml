@{
  Layout = "_Layout";
}

@model Treats.Models.Flavor;

<h2>Flavor Options</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinTreats.Count == 0)
{
  <p>This flavor does not contain any treats</p>
}
else
{
  <h4>Treats with these flavors:</h4>
  <ul>
  @foreach(var join in Model.JoinTreats)
  {
    <li>@join.Treat.Name</li>
      
  }
  </ul>
}

<p>@Html.ActionLink("Back to flavor options", "Index")</p>
<p>@Html.ActionLink("Edit Flavors", "Edit", new { id = Model.FlavorId })</p>
<p>@Html.ActionLink("Delete Flavors", "Delete", new { id = Model.FlavorId })</p>