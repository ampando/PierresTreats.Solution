@{
  Layout = "_Layout";
}

@model Treats.Models.Flavor;

<h2>Flavor Options</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinTreats.Count == 0)
{
  <p>This flavor is not assigned to a treat.</p>
}
else
{
  <h4>Treats with these flavors:</h4>
  <ul>
  @foreach(var join in Model.JoinTreats)
  {
    <li>@join.Treat.Name</li>
      
  }
  </ul>
}

<button>@Html.ActionLink("Back To Flavor Options", "Index")</button>
<button>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</button>
<button>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</button>
<button>@Html.ActionLink("Assign To A Treat", "AddTreat", new { id = Model.FlavorId })</button>