@{
  Layout = "_Layout";
}

@using Treats.Models;

<div class="content">
<h2>Flavor Options</h2>

@if (@Model.Count == 0)
{
  <h3>No flavor options have been added yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<button>@Html.ActionLink("Add A New Flavor", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>

</div>