@{
  Layout = "_Layout";
}

@using Treats.ViewModels
@model RegisterViewModel

<h2>Register here to shop at Pierre's Bakery</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new { @class="form-control", required="required" })

    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password, new { @class="form-control", required="required" })

    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword, new { @class="form-control", required="required" })

    <input type="submit" value="Register" />
}